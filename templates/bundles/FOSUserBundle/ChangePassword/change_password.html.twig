{% extends 'base/layout-main.html.twig' %}

{% block title %}Editar Contraseña - Su cuenta - {{ parent() }}{% endblock %}

{% block content_center %}

    <div class="row align-items-center mb-3 mb-xl-5">
      <div class="col-md mb-2 mb-md-0">
        <h1 class="h3 mb-0">Editar contraseña</h1>
      </div>
      <div class="col-md ml-md-auto text-md-right">


        <a class="btn btn-soft-primary btn-sm float-right" style="margin-right:15px;" href="{{ path('fos_user_profile_edit') }}">
          <i class="nova-pencil icon-text align-middle mr-1"></i>
          Editar
        </a>

        <a class="btn btn-soft-light text-dark btn-sm float-right" style="margin-right:15px;" href="{{ path('fos_user_profile_show') }}">
          <i class="nova-angle-left icon-text align-middle mr-1"></i> &nbsp; Ver cuenta
        </a>

      </div>
    </div>

    <div class="card">
      <div class="card-body">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_profile_edit', 'novalidate': 'novalidate' } }) }}


          <div class="form-group row">
            <label class="col-form-label col-sm-2 required">Contraseña actual</label>
            <div class="col-sm-10">
              {{ form_widget(form.current_password) }}
            </div>
          </div>

          <div class="form-group row">
            <label class="col-form-label col-sm-2 required">Nueva contraseña</label>
            <div class="col-sm-10">
              {{ form_widget(form.plainPassword.first) }}
            </div>
          </div>

          <div class="form-group row">
            <label class="col-form-label col-sm-2 required">Repita nueva contraseña</label>
            <div class="col-sm-10">
              {{ form_widget(form.plainPassword.second) }}
            </div>
          </div>
          
          <hr>
          <button class="btn btn-sm btn-outline-success">Guardar cambios</button>

          {{ form_widget(form) }}

        {{ form_end(form) }}

      </div>
    </div>

{% endblock %}
